<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Smartlineman" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Smartlineman" parent="Base.Theme.Smartlineman" />

    <style name="Widget.App.Button.Answer" parent="Widget.Material3.Button">
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingVertical">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="Widget.App.Button.Answer.A" parent="Widget.App.Button.Answer">
        <item name="android:backgroundTint">@color/answer_option_default</item>
    </style>

    <style name="Widget.App.Button.Answer.B" parent="Widget.App.Button.Answer">
        <item name="android:backgroundTint">@color/answer_option_default</item>
    </style>

    <style name="Widget.App.Button.Answer.C" parent="Widget.App.Button.Answer">
        <item name="android:backgroundTint">@color/answer_option_default</item>
    </style>

    <style name="Widget.App.Button.Answer.D" parent="Widget.App.Button.Answer">
        <item name="android:backgroundTint">@color/answer_option_default</item>
    </style>

    <style name="Widget.App.MenuCard" parent="Widget.Material3.CardView.Filled">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">#33FFFFFF</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.App.MenuCard.LinearLayout" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Widget.App.MenuCard.ImageView" parent="">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="Widget.App.MenuCard.TextView" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>