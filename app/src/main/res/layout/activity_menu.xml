<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background_gradient"
    tools:context=".MenuActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:padding="16dp">

        <!-- Resources Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_resources"
            style="@style/Widget.App.MenuCard">

            <LinearLayout style="@style/Widget.App.MenuCard.LinearLayout">

                <ImageView
                    style="@style/Widget.App.MenuCard.ImageView"
                    android:src="@drawable/ic_resources" />

                <TextView
                    style="@style/Widget.App.MenuCard.TextView"
                    android:text="Resources" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Market Place Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_market_place"
            style="@style/Widget.App.MenuCard">

            <LinearLayout style="@style/Widget.App.MenuCard.LinearLayout">

                <ImageView
                    style="@style/Widget.App.MenuCard.ImageView"
                    android:src="@drawable/marketplace" />

                <TextView
                    style="@style/Widget.App.MenuCard.TextView"
                    android:text="Market Place" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Update Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_update"
            style="@style/Widget.App.MenuCard">

            <LinearLayout style="@style/Widget.App.MenuCard.LinearLayout">

                <ImageView
                    style="@style/Widget.App.MenuCard.ImageView"
                    android:src="@drawable/ic_update" />

                <TextView
                    style="@style/Widget.App.MenuCard.TextView"
                    android:text="Update" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Notice Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_notice"
            style="@style/Widget.App.MenuCard">

            <LinearLayout style="@style/Widget.App.MenuCard.LinearLayout">

                <ImageView
                    style="@style/Widget.App.MenuCard.ImageView"
                    android:src="@drawable/ic_notice" />

                <TextView
                    style="@style/Widget.App.MenuCard.TextView"
                    android:text="Notice" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Help Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_help"
            style="@style/Widget.App.MenuCard">

            <LinearLayout style="@style/Widget.App.MenuCard.LinearLayout">

                <ImageView
                    style="@style/Widget.App.MenuCard.ImageView"
                    android:src="@drawable/ic_help" />

                <TextView
                    style="@style/Widget.App.MenuCard.TextView"
                    android:text="Help" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Reset Progress Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_reset_progress"
            style="@style/Widget.App.MenuCard">

            <LinearLayout style="@style/Widget.App.MenuCard.LinearLayout">

                <com.airbnb.lottie.LottieAnimationView
                    style="@style/Widget.App.MenuCard.ImageView"
                    app:lottie_rawRes="@raw/reset"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true" />

                <TextView
                    style="@style/Widget.App.MenuCard.TextView"
                    android:text="Reset Progress" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>