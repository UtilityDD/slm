<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background_gradient"
    tools:context=".MenuActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingVertical="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Resources Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_resources"
                style="@style/Widget.App.MenuCard.FullWidth"
                app:cardBackgroundColor="#BBDEFB">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/icon_background_resources"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardBackgroundColor="@color/eci_violet"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_menu_book" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Resources"
                        style="@style/Widget.App.MenuCard.TextView.Horizontal"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_resources"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Market Place Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_market_place"
                style="@style/Widget.App.MenuCard.FullWidth"
                app:cardBackgroundColor="#C8E6C9">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/icon_background_market"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardBackgroundColor="@color/eci_violet"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_store" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Market Place"
                        style="@style/Widget.App.MenuCard.TextView.Horizontal"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_market"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Update Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_update"
                style="@style/Widget.App.MenuCard.FullWidth"
                app:cardBackgroundColor="#FFECB3">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/icon_background_update"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardBackgroundColor="@color/eci_violet"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_system_update" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        style="@style/Widget.App.MenuCard.TextView.Horizontal"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_update"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Notice Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_notice"
                style="@style/Widget.App.MenuCard.FullWidth"
                app:cardBackgroundColor="#FFCDD2">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/icon_background_notice"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardBackgroundColor="@color/eci_violet"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_notifications" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Notice"
                        style="@style/Widget.App.MenuCard.TextView.Horizontal"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_notice"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Help Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_help"
                style="@style/Widget.App.MenuCard.FullWidth"
                app:cardBackgroundColor="#D1C4E9">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/icon_background_help"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardBackgroundColor="@color/eci_violet"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_help_outline" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Help"
                        style="@style/Widget.App.MenuCard.TextView.Horizontal"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_help"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Reset Progress Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_reset_progress"
                style="@style/Widget.App.MenuCard.FullWidth"
                app:cardBackgroundColor="#B2EBF2">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/icon_background_reset"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        app:cardBackgroundColor="@color/eci_violet"
                        app:cardCornerRadius="32dp"
                        app:cardElevation="4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <ImageView
                            android:id="@+id/reset_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_reset" />
                    </com.google.android.material.card.MaterialCardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Reset Progress"
                        style="@style/Widget.App.MenuCard.TextView.Horizontal"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/icon_background_reset"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>