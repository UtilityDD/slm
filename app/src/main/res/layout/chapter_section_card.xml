<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="@color/card_bg_light"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/card_stroke_light"
    app:strokeWidth="0.8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp"
        android:background="@drawable/card_inner_bg">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/section_emoji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="?attr/colorPrimary"
                tools:text="ðŸ“˜" />

            <TextView
                android:id="@+id/section_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:textColor="@color/title_text"
                android:textStyle="bold"
                android:textSize="18sp"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="Understanding Electricity Basics" />
        </LinearLayout>

        <!-- Image Container -->
        <FrameLayout
            android:id="@+id/image_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/section_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/rounded_image_bg"
                android:clipToOutline="true"
                android:scaleType="fitCenter"
                tools:src="@drawable/lineman_character" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="8dp"
                android:background="@drawable/zoom_icon_background"
                android:contentDescription="Zoom image"
                android:padding="4dp"
                android:src="@drawable/ic_zoom_out_map"
                app:tint="@android:color/white" />
        </FrameLayout>

        <!-- Image Caption -->
        <TextView
            android:id="@+id/section_image_caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textColor="@color/body_text"
            android:textSize="14sp"
            android:textStyle="italic"
            android:visibility="gone"
            tools:text="This is a sample image caption." />

        <!-- Subtle Divider -->
        <View
            android:id="@+id/section_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:background="@color/card_divider" />

        <!-- Content -->
        <TextView
            android:id="@+id/section_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textColor="@color/body_text"
            android:textSize="15sp"
            android:lineSpacingExtra="5dp"
            tools:text="Electricity is the flow of electric charge. This section introduces you to the basic concept of current, voltage, and resistance..." />

        <!-- Source Link Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/section_link_button"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:text="Know more?"
            android:visibility="gone"
            android:textColor="?attr/colorOnSurface"
            app:icon="@drawable/ic_link"
            tools:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
