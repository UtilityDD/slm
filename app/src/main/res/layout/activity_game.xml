<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background_gradient"
    tools:context=".GameActivity">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_background_pill"
            android:backgroundTint="#20000000"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:textColor="@color/midnight_blue"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            tools:text="Chapter 1.1" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/question_counter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_background_pill"
            android:backgroundTint="#20000000"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="@string/question_placeholder"
            android:textColor="@color/midnight_blue"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            tools:text="5/10" />
    </LinearLayout>

    <!-- Timer Bar -->
    <ProgressBar
        android:id="@+id/timer_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"
        android:progressDrawable="@drawable/timer_progress_background"
        android:progress="100"
        app:layout_constraintTop_toBottomOf="@id/header_container" />

    <!-- Question Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/question_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/timer_progress_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <ImageView
                android:id="@+id/question_image"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="16dp"
                android:contentDescription="@string/question_image_desc"
                android:scaleType="fitCenter"
                android:visibility="gone"
                tools:src="@drawable/lineman_character"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/sample_question"
                android:textColor="@color/midnight_blue"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:lineSpacingMultiplier="1.3" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Feedback Icon -->
    <ImageView
        android:id="@+id/feedback_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="@id/question_card"
        app:layout_constraintBottom_toBottomOf="@id/question_card"
        app:layout_constraintStart_toStartOf="@id/question_card"
        app:layout_constraintEnd_toEndOf="@id/question_card"
        tools:src="@drawable/ic_correct"
        tools:visibility="visible" />

    <!-- Answers Container -->
    <LinearLayout
        android:id="@+id/answers_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/question_card"
        app:layout_constraintBottom_toTopOf="@id/submit_button">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/answer_button_a"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:paddingVertical="14dp"
            android:text="@string/sample_answer_a"
            android:textSize="16sp"
            android:textColor="@color/midnight_blue"
            app:strokeColor="@color/midnight_blue"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/answer_button_b"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:paddingVertical="14dp"
            android:text="@string/sample_answer_b"
            android:textSize="16sp"
            android:textColor="@color/midnight_blue"
            app:strokeColor="@color/midnight_blue"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/answer_button_c"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:paddingVertical="14dp"
            android:text="@string/sample_answer_c"
            android:textSize="16sp"
            android:textColor="@color/midnight_blue"
            app:strokeColor="@color/midnight_blue"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/answer_button_d"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:text="@string/sample_answer_d"
            android:textSize="16sp"
            android:textColor="@color/midnight_blue"
            app:strokeColor="@color/midnight_blue"
            app:strokeWidth="1dp"
            app:cornerRadius="12dp" />

    </LinearLayout>

    <!-- Submit Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/submit_button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:text="@string/submit_answer"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:backgroundTint="@null"
        android:background="@drawable/next_button_gradient"
        app:cornerRadius="32dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>