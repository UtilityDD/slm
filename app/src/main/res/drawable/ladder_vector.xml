<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:width="120dp"
    android:height="2000dp"
    android:viewportWidth="120"
    android:viewportHeight="2000">

    <!-- Subtle shadow background -->
    <path
        android:pathData="M0,0 H120 V2000 H0 Z"
        android:fillColor="#10000000" />

    <!-- Left rail -->
    <path android:pathData="M20,0 L35,0 L35,2000 L20,2000 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startX="20"
                android:endX="35"
                android:type="linear">
                <item android:offset="0" android:color="#5E2E00"/>
                <item android:offset="0.3" android:color="#8B4513"/>
                <item android:offset="0.7" android:color="#A65E2A"/>
                <item android:offset="1" android:color="#5E2E00"/>
            </gradient>
        </aapt:attr>
    </path>

    <!-- Right rail -->
    <path android:pathData="M85,0 L100,0 L100,2000 L85,2000 Z">
        <aapt:attr name="android:fillColor">
            <gradient
                android:startX="85"
                android:endX="100"
                android:type="linear">
                <item android:offset="0" android:color="#5E2E00"/>
                <item android:offset="0.3" android:color="#A65E2A"/>
                <item android:offset="0.7" android:color="#8B4513"/>
                <item android:offset="1" android:color="#5E2E00"/>
            </gradient>
        </aapt:attr>
    </path>

   
</vector>
